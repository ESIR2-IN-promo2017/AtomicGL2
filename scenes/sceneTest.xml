<?xml version="1.0" encoding="UTF-8"?>

<SCENE>
	<LIGHTS>
		<POINTLIGHT id="Sun" color="1.0,1.0,1.0" position="2.0,30.0,0.0" intensity="10" >
		</POINTLIGHT>
		<DIRECTIONNALLIGHT id="DirecionnalLight" color="1.0,1.0,1.0" direction="1.0,0.0,0.0">
		</DIRECTIONNALLIGHT>
		<SPOTLIGHT id="SpotLight" color="1.0,1.0,1.0" position="0.0,0.0,0.0" direction="1.0,0.0,0.0" radius="1.0">
		</SPOTLIGHT>
	</LIGHTS>

	<SHADERS>
		<XMATSHADER file="shaders/textProg.xml">textProg</XMATSHADER>
		<!-- <XMATSHADER file="shaders/textDiffProg.xml">texDiffProg</XMATSHADER> -->
	</SHADERS>

	<TEXTURES>
		<TEXTURE id="skyTex" type="color">texture/skybox_texture.png</TEXTURE>
		<TEXTURE id="sable1" type="color">texture/sable1.png</TEXTURE>
		<TEXTURE id="crate1" type="color">texture/crate1.png</TEXTURE>
		<TEXTURE id="mur_pierre1" type="color">texture/mur_pierre1.png</TEXTURE>
	</TEXTURES>

	<SHAPES>
		<SHAPE id="ground_sand" type="js">
			<GEOMETRY id="sol_sable" uv="0.2,0.2">sol_route()</GEOMETRY>
			<TEXTID>mur_pierre1</TEXTID>
		</SHAPE>

		<SHAPE id="sexy_lady" type="obj">
			<GEOMETRY id="sexy_lady_obj" uv="1.0,1.0">sexylady.obj</GEOMETRY>
			<TEXTID>crate1</TEXTID>
		</SHAPE>

		<SPHERE id="sphere" type="js">
			<GEOMETRY id="sphereToto" rad="0.5" lat="60" long="60" uv="3,3"></GEOMETRY>
			<TEXTID>crate1</TEXTID>
		</SPHERE>

		<XYPLANE id="navmesh" type="js">
			<GEOMETRY id="road" height="5.0" width="5.0" xrow="2.0" yrow="2.0" uv="1,1"></GEOMETRY>
			<TEXTID>sable1</TEXTID>
		</XYPLANE>
	</SHAPES>

	<ROOT id="root" skybox="skyTex" skysize="800.0" skyshader="textProg" camera="walk">
			<TRANSFORM id="transform_ground" translate="0.0,0.0,0.0" rotaxis="0.0,0.0,0.0" angle="0.0">
					<OBJECT3D id="obj_ground_sand" shader="textProg">ground_sand</OBJECT3D>
			</TRANSFORM>

			<TRANSFORM id="transform_road" translate="0.0,0.2,-3.0" rotaxis="1.0,0.0,0.0" angle="90.0">
					<OBJECT3D id="obj_road" shader="textProg">navmesh</OBJECT3D>
			</TRANSFORM>

			<TRANSFORM id="transform_sphere" translate="1.0,0.5,-2.0" rotaxis="0.0,0.0,0.0" angle="0.0">
					<OBJECT3D id="obj_toto" shader="textProg">sphere</OBJECT3D>
			</TRANSFORM>

			<TRANSFORM id="transform_sexylady" translate="-1.0,0.0,-3.0" rotaxis="0.0,1.0,0.0" angle="-30.0">
					<OBJECT3D id="obj_sexy_lady" shader="textProg">sexy_lady</OBJECT3D>
			</TRANSFORM>
	</ROOT>
</SCENE>
