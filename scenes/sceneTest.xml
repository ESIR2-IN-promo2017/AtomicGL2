<?xml version="1.0" encoding="UTF-8"?>

<SCENE>
	<LIGHTS>
		<POINTLIGHT id="PointLight" color="1.0,1.0,1.0" position="2.0,10.0,0.0" intensity="1"></POINTLIGHT>
		<DIRECTIONNALLIGHT id="DirecionnalLight" color="0.3,0.3,0.3" direction="10.0,-5.0,-10.0"></DIRECTIONNALLIGHT>
		<SPOTLIGHT id="SpotLight" color="10.0,0.0,0.0" position="15.0,2.0,-15.0" direction="0.0,-1.0,0.0" radius="2"></SPOTLIGHT>
	</LIGHTS>

	<SHADERS>
		<XMATSHADER file="shaders/textProg.xml">textProg</XMATSHADER>
		<XMATSHADER file="shaders/textDiffProg.xml">textDiffProg</XMATSHADER>
		<XMATSHADER file="shaders/textNormalMapProg.xml">textNormalMapProg</XMATSHADER>
	</SHADERS>

	<TEXTURES>
		<TEXTURE id="skyTex" type="color">texture/skybox_texture.png</TEXTURE>
		<TEXTURE id="sable1" type="color">texture/sable1.png</TEXTURE>
		<TEXTURE id="herbe1" type="color">texture/bitume2.png</TEXTURE>
		<TEXTURE id="herbe1_normal" type="color">texture/bitume2_normal.png</TEXTURE>
		<TEXTURE id="crate1" type="color">texture/crate1.png</TEXTURE>
		<TEXTURE id="mur_pierre1" type="color">texture/mur_pierre1.png</TEXTURE>
	</TEXTURES>

	<SHAPES>
		<SHAPE id="ground_sand" type="js">
			<GEOMETRY id="sol_sable" uv="0.1,0.1">sol_herbe()</GEOMETRY>
			<TEXTID>herbe1</TEXTID>
			<TEXTID>herbe1_normal</TEXTID>
		</SHAPE>

		<SHAPE id="sexy_lady" type="obj">
			<GEOMETRY id="sexy_lady_obj" uv="1.0,1.0">sexylady.obj</GEOMETRY>
			<TEXTID>herbe1</TEXTID>
			<TEXTID>herbe1_normal</TEXTID>
		</SHAPE>

		<SPHERE id="sphere" type="js">
			<GEOMETRY id="sphereToto" rad="1" lat="60" long="60" uv="3,3"></GEOMETRY>
			<TEXTID>mur_pierre1</TEXTID>
			<TEXTID>mur_pierre1</TEXTID>
		</SPHERE>
	</SHAPES>

	<ROOT id="root" skybox="skyTex" skysize="800.0" skyshader="textProg" camera="walk" navmesh='sol_herbe()'>
 			<TRANSFORM id="transform_ground" translate="0.0,0.0,0.0" rotaxis="0.0,0.0,0.0" angle="0.0">
				<OBJECT3D id="obj_sol" shader="textNormalMapProg">ground_sand</OBJECT3D>
				<TRANSFORM id="transform_sphere" translate="2.0,1.0,-3.0" rotaxis="0.0,0.0,0.0" angle="0.0">
						<OBJECT3D id="obj_toto" shader="textDiffProg">sphere</OBJECT3D>
				</TRANSFORM>
			</TRANSFORM>
			<TRANSFORM id="transform_sexylady" translate="-1.0,0.0,-3.0" rotaxis="0.0,1.0,0.0" angle="-30.0">
					<OBJECT3D id="obj_sexy_lady" shader="textDiffProg">sexy_lady</OBJECT3D>
			</TRANSFORM>
	</ROOT>
</SCENE>
